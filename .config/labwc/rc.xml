<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <core>
    <gap>10</gap>
  </core>

  
  <theme>
    <name>Nordic-darker-v40</name>
    <cornerRadius>8</cornerRadius>
    <font name="JetBrainsMonoNL Nerd Font" size="10" />
  </theme>
  

  <keyboard>
    <default />

    <keybind key="W-a">
	<action name="Iconify"/>
    </keybind>

    <keybind key="W-Return">
      <action name="Execute" command="alacritty" />
    </keybind>

    <keybind key="W-z">
      <action name="Execute" command="wofi --show drun" />
    </keybind>

    <keybind key="W-l">
      <action name="Execute" command="swaylock -f -c ffffff" />
    </keybind>
    
    <keybind key="W-S-p">
      <action name="Execute" command="labwc --reconfigure" />
    </keybind>

    <keybind key="W-e">
      <action name="Execute" command="Thunar" />
    </keybind>

    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-" />
    </keybind>

    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+" />
    </keybind>
   
    <keybind key="XF86_AudioMute">
        <action name="Execute" command="wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle" />
    </keybind>
    
    <keybind key="XF86_AudioMicMute">
        <action name="Execute" command="wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle" />
    </keybind>
    
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl set +5%" />
    </keybind>
    
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 5%-" />
    </keybind>
    
    <keybind key="C-A-Delete">
        <action name="Execute">
            <command>labwc --exit</command>
        </action>
    </keybind>

    <keybind key="Print">
  	<action name="Execute">
    	<command>sh -c 'grim -g "$(slurp)" ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).jpg'</command>
  	</action>
    </keybind>

  </keyboard>

  <mouse>
      <default />
  </mouse>

  <libinput>
      <device category="SynPS/2 Synaptics TouchPad">
      <naturalScroll>disabled</naturalScroll>
      <accelProfile>adaptive</accelProfile>
      <tap>yes</tap>
      <tapButtonMap>lrm</tapButtonMap>
      <middleEmulation>disabled</middleEmulation>
      <disableWhileTyping>enabled</disableWhileTyping>
      <clickMethod>clickfinger</clickMethod>
      <scrollMethod>twofinger</scrollMethod>
    </device>
  </libinput>

  <windowSwitcher show="yes" style="classic" preview="yes" outlines="yes" allWorkspaces="yes">
    <fields>
      <field content="desktop_entry_name" width="40%" />
      <field content="title" width="60%" />
    </fields>
  </windowSwitcher>
</labwc_config>
